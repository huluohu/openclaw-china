{
  "name": "moltbot-china",
  "version": "0.1.0",
  "description": "Moltbot extensions for China IM platforms (DingTalk, WeCom, Feishu)",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "oxlint .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "moltbot",
    "clawdbot",
    "dingtalk",
    "wecom",
    "feishu",
    "lark",
    "chatbot"
  ],
  "author": "BytePioneer-AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BytePioneer-AI/moltbot-china.git"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "oxlint": "^0.16.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
